<!DOCTYPE html>
<html>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/stylesheets/default.css">

  <body>

  <!-- ******* Navbar ******* -->
    <div class="top">

      <ul class="navbar left-align colors-white" id="myNavbar">

        <!-- 1st element: menu icon [small screen] -->
        <li class="hide-medium hide-large float-right opennav">
          <a href="javascript:void(0);" onclick="openMenu()">
            <!-- Icon of the menu (3 horizontal bars) on the right side on small screens-->
            <div class="menu-icon">
              <div class="menu-bar1"></div>
              <div class="menu-bar2"></div>
              <div class="menu-bar3"></div>
            </div>
          </a>
        </li>

        <!-- 2nd element: language -->
        <li class=" float-right opennav">
          <a class="hover-colors-white-black" href="<%= t(:language_link) %>">
            <%= t(:language) %>
          </a>
        </li>

        <!-- 3rd element: home icon (Lingua de Gato logo) -->
        <li onclick="closeMenu()">
          <a href="#" style="padding-top: 0px; padding-bottom: 0px; display: inline-block">
            <img src="/images/logo/icon-small.png" alt="<%= t(:img_logo_description) %>">
          </a>
        </li>

        <!-- Other element: menu options (will not appear on small screen) -->
        <li class="hide-small"><a href="#articles" class="hover-colors-white-black"><%= t(:menu1) %></a></li>
        <li class="hide-small"><a href="#team" class="hover-colors-white-black"><%= t(:menu2) %></a></li>
        <li class="hide-small"><a href="#thanks" class="hover-colors-white-black"><%= t(:menu3) %></a></li>
        <li class="hide-small"><a href="#contact" class="hover-colors-white-black"><%= t(:menu4) %></a></li>
        <li class="hide-small"><a href="https://medium.com/linguadegato-br" class="hover-colors-white-black" target="_blank"><%= t(:menu5) %></a></li>

     </ul>

      <!-- Navbar on small screens (change classes when it is suposed to appear or not)-->
      <div id="navbarSmall" class="hide hide-large hide-medium" onclick="closeMenu()">
        <ul class="navbar left-align colors-green-white">
          <li><a href="#articles" class="hover-colors-white-black"><%= t(:menu1) %></a></li>
          <li><a href="#team" class="hover-colors-white-black"><%= t(:menu2) %></a></li>
          <li><a href="#thanks" class="hover-colors-white-black"><%= t(:menu3) %></a></li>
          <li><a href="#contact" class="hover-colors-white-black"><%= t(:menu4) %></a></li>
          <li><a href="https://medium.com/linguadegato-br" class="hover-colors-white-black" target="_blank"><%= t(:menu5) %></a></li>
        </ul>
      </div>

    </div>

  <!-- *******  Header ******* -->
    <div id="header" onclick="closeMenu()" style="position: relative;">

      <!-- Background image (big and medium screens)-->
      <img src="/images/background/placeit-big.png" alt="<%= t(:img_background_description) %>" class="hide-small background-image">

      <!-- Background image (small screen) -->
      <img src="/images/background/placeit-small.png" alt="<%= t(:img_background_description) %>" class="hide-medium hide-large background-image">

      <!-- Banner with logo and icon (big and medium screens) -->
      <div class="display-right padding-medium hide-small hide-medium width-35">
        <div class="padding-large round-large colors-pink-white">
          <img class="centralize height-100px" src="/images/logo/icon-medium.png" alt="<%= t(:img_logo_description) %>">
          <img class="width-100" src="/images/logo/lingua-de-gato-white-small.png" alt="<%= t(:logo_description) %>">
          <br><br>
          <a href="https://itunes.apple.com/app/id1071864943?mt=8" target="_blank">
            <img class="centralize width-160px" src="<%= t(:appStore_image) %>" alt="<%= t(:img_appStore_description) %>">
          </a>
        </div>
      </div>

      <!-- Banner with logo and icon (small screen) -->
      <div class="padding-medium hide-large width-100">
        <div class="padding-large round-large colors-pink-white">
          <img src="/images/logo/lingua-de-gato-white-small.png" alt="<%= t(:img_logo_description) %>" class="width-100"">
        </div>
      </div>

    </div>

  <!-- *******  Pillars Container ******* -->
    <div class="padding-64 text-center container" id="pillars" onclick="closeMenu()">

      <div class="row"><br>

        <div class="third">
          <img src="/images/pillars/fun.jpg" alt="<%= t(:img_pillar_fun) %>" class="circle width-45">
          <h3><%= t(:pillar1_title) %></h3>
          <p><%= t(:pillar1_description) %></p>
        </div>

        <div class="third">
          <img src="/images/pillars/teach.jpg" alt="<%= t(:img_pillar_teach) %>" class="circle width-45">
          <h3><%= t(:pillar2_title) %></h3>
          <p><%= t(:pillar2_description) %></p>
        </div>

        <div class="third">
          <img src="/images/pillars/together.jpg" alt="<%= t(:img_pillar_together) %>" class="circle width-45">
          <h3><%= t(:pillar3_title) %></h3>
          <p><%= t(:pillar3_description) %></p>
        </div>

      </div>
    </div>

  <!-- *******  Articles Row ******* -->
    <div class="padding-64 colors-blue-white row-padding" id="articles" onclick="closeMenu()">

      <div class="quarter">
        <h2><%= t(:section1_title) %></h2>
      </div>

      <div class="quarter">
        <a href="<%= t(:article2_link) %>" target="_blank" style="text-decoration: none">
          <div class="box colors-white-black hover-colors-orange-white">
            <div class="container">
              <h4><%= t(:article2_title) %></h4>
              <%= t(:article2_autor) %>
              <p><%= t(:article_pt_message) %></p>
              <h5><%= t(:article2_event) %></h5>
            </div>
          </div>
        </a>
      </div>

      <div class="quarter">
        <a href="<%= t(:article1_link) %>" target="_blank" style="text-decoration: none">
          <div class="box colors-white-black hover-colors-orange-white">
            <div class="container">
              <h4><%= t(:article1_title) %></h4>
              <%= t(:article1_autor) %>
              <p><%= t(:article_pt_message) %></p>
              <h5><%= t(:article1_event) %></h5>
            </div>
          </div>
        </a>
      </div>

    </div>

  <!-- *******  Team Row ******* -->
    <div class="padding-64 text-center row-padding" id="team" onclick="closeMenu()">
        <h2><%= t(:section2_title) %></h2>
        <br>

        <div class="third margin-bottom">
          <img src="/images/team/alline.png" alt="Alline Kobayashi" class="circle width-45">
          <h3><%= t(:team1_name) %></h3>
          <a class="btn colors-pink-white hover-colors-blue-white" href="https://br.linkedin.com/in/alline-kobayashi-b9083345" role="button" target="_blank">LinkedIn</a>
          <a class="btn colors-pink-white hover-colors-blue-white" href="http://lattes.cnpq.br/8071107008406828" role="button" target="_blank">Lattes</a>
        </div>

        <div class="third margin-bottom">
          <p><%= t(:team1_description) %></p>
        </div>
    </div>

  <!-- *******  Thanks Row ******* -->
    <div class="padding-64 colors-orange-white row-padding" id="thanks" onclick="closeMenu()">

      <div class="quarter">
        <h2><%= t(:section3_title) %></h2>
      </div>

      <div class="quarter">
        <div class="box colors-white-black">
          <div class="container">
            <h3><%= t(:thanks1_name) %></h3>
            <p><%= t(:thanks1_description) %></p>
            <p>
              <a class="btn colors-green-white hover-colors-orange-white" href="<%= t(:thanks1_linkedin) %>" role="button" target="_blank">LinkedIn</a>
              <a class="btn colors-green-white hover-colors-orange-white" href="<%= t(:thanks1_portfolio_link) %>" role="button" target="_blank"><%= t(:thanks1_portfolio) %></a>
            </p>
          </div>
        </div>
      </div>

      <div class="quarter">
        <div class="box colors-white-black">
          <div class="container">
            <h3><%= t(:thanks2_name) %></h3>
            <p><%= t(:thanks2_description) %></p>
          </div>
        </div>
      </div>

      <div class="quarter">
        <div class="box colors-white-black">
          <div class="container">
            <h3><%= t(:thanks3_name) %></h3>
            <p><%= t(:thanks3_description) %></p>
            <p>
              <a class="btn colors-green-white hover-colors-orange-white" href="<%= t(:thanks3_linkedin) %>" role="button" target="_blank">LinkedIn</a>
            </p>
          </div>
        </div>
      </div>

    </div>

  <!-- *******  Contact Container ******* -->
    <div class="padding-64 colors-lightgrey-black container" id="contact" onclick="closeMenu()">
      <div class="row">
        <!-- <div class="col m5"> -->
          <div class="padding-16">
            <span class="font-size-xlarge underline-pink">
              <%= t(:contact) %>
            </span>
          </div>
          <p><%= t(:contact_message) %></p>
          <img src="/images/mail/mail-pink.png" alt="<%= t(:img_contact_description) %>">
          contato@linguadegatoapp.com.br
        <!-- </div> -->
      </div>
    </div>

  <!-- *******  Footer ******* -->
    <footer class="padding-32 colors-green-white text-center container" onclick="closeMenu()">

      <!-- AppStore link -->
      <a href="https://itunes.apple.com/app/id1071864943?mt=8" target="_blank" style="display: inline-block;">
        <img src="<%= t(:appStore_image) %>" class="width-160px" alt="<%= t(:img_appStore_description) %>">
      </a>

      <!-- Facebook link -->
      <a href="https://www.facebook.com/linguadegatoapp" target="_blank" style="display: inline-block;">
        <img src="/images/facebook.png" class="facebook-img" alt="<%= t(:img_facebook_description) %>">
      </a>

      <!-- Btn to top -->
      <div class="top-btn float-right">
        <span class="display-none padding-medium colors-green-white hide-small"><%= t(:top_message) %></span>
        <a class="btn colors-green-white" href="#">
          <span class="font-size-xlarge">
              <img src="/images/arrow-up/up-white.png" alt="<%= t(:img_up_description) %>">
          </span>
        </a>
      </div>
    </footer>

  <!-- *******  Scripts ******* -->
    <script>
      // Used to toggle the menu on smaller screens when clicking on the menu button
      function openMenu() {
          var x = document.getElementById("navbarSmall");
          if (x.className.indexOf("show-block") == -1) {
              x.className += " show-block";
          } else {
              x.className = x.className.replace(" show-block", "");
          }
      }

      // Modal Image Gallery
      function closeMenu(){
        var smallMenu = document.getElementById("navbarSmall");
        if (smallMenu.style.display != "none"){
          smallMenu.className = smallMenu.className.replace(" show-block", "");
        }
      }


      // Change style of navbar on scroll
      window.onscroll = function() {myFunction()};
      function myFunction() {
          var navbar = document.getElementById("myNavbar");
          if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
              navbar.className = "navbar left-align animate-top colors-green-white shadow";
          } else {
              navbar.className = "navbar left-align colors-white";
          }
      }
    </script>

  </body>
</html>
